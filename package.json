{
  "name": "simple-snake-game",
  "version": "1.0.0",
  "description": "A simple snake game with unit tests",
  "main": "script.js",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "keywords": [
    "snake",
    "game",
    "javascript",
    "jest"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^24.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "*.js",
      "!script.js", 
      "!node_modules/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}
